{
  "name": "alexa-flagquiz-skill",
  "version": "1.0.0",
  "description": "Alexa Flag Quiz Skill",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "pretest": "npm run build:prod",
    "test": "cross-env AWS_REGION=us-east-1 jest",
    "test:watch": "cross-env AWS_REGION=us-east-1 jest --watch",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "build": "webpack --config webpack.config.ts --require ts-node/register",
    "build:dev": "npm run build -- --mode development --watch",
    "build:prod": "npm run lint && npm run build -- --mode production",
    "deploy:prod": "ask deploy --force --profile default --target lambda",
    "update-schema": "ts-node ./bin/update-schema.ts --lang de --file ./models/de-DE.json",
    "convert-assets": "rsvg-convert -w 108 -o assets/icon108.png assets/icon.svg && rsvg-convert -w 512 -o assets/icon512.png assets/icon.svg",
    "create-s3-bucket": "aws s3 ls s3://alexa-flagquiz-skill > /dev/null 2>&1 || aws s3 mb s3://alexa-flagquiz-skill --region eu-west-1",
    "deploy:assets": "aws s3 sync ./assets s3://alexa-flagquiz-skill/ --acl public-read"
  },
  "devDependencies": {
    "@corux/country-data": "2.0.3",
    "@types/jest": "26.0.5",
    "@types/node": "10.14.1",
    "ask-cli": "2.12.0",
    "ask-sdk-core": "2.8.0",
    "ask-sdk-dynamodb-persistence-adapter": "2.8.0",
    "ask-sdk-model": "1.28.0",
    "aws-sdk": "2.715.0",
    "class.extend": "0.9.2",
    "commander": "5.1.0",
    "cross-env": "7.0.2",
    "jest": "26.1.0",
    "raw-loader": "4.0.1",
    "ts-jest": "26.1.3",
    "ts-loader": "8.0.1",
    "ts-node": "8.10.2",
    "tslint": "5.20.1",
    "typescript": "3.9.7",
    "underscore": "1.10.2",
    "virtual-alexa": "0.7.5",
    "webpack": "4.43.0",
    "webpack-command": "0.5.0"
  }
}
